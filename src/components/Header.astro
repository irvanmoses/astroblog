---
interface Props {
	forPost?: boolean;
}

const { forPost } = Astro.props as Props;
---

<header>
	<div class="block"></div>

	{
		forPost ? null : (
			<div class="profile">
				<img src="/images/profil.png" alt="profil" />
				<h2>Irvan Moses</h2>
				<p>User Interface Designer</p>
			</div>
		)
	}
</header>
<style>
	.profile {
		display: flex;
		align-items: center;
		flex-direction: column;
		margin-top: -4rem;
	}

	h2 {
		margin-top: 1rem;
	}

	p {
		margin-top: 0.4rem;
	}

	.block {
		width: 100%;
		height: 150px;
		background-color: #1a1a1a;
	}
</style>
